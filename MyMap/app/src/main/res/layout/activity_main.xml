<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/menu02"
    >
    <Button
        android:id="@+id/getDate"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_margin="32dp"
        android:layout_above="@+id/address_et"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        />
    <TextView
        android:id="@+id/address_et"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:text="进入实景导航"
        android:id="@+id/textView2"
        android:layout_above="@+id/textView3"
        android:layout_toLeftOf="@+id/address_et"
        android:layout_toStartOf="@+id/address_et" />
    <ImageButton
        android:id="@+id/toCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/left"
        android:background="#00000000"
        android:layout_above="@+id/kaifazhe"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:text="朝向检测"
        android:id="@+id/textView"
        android:layout_above="@+id/toTest"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:id="@+id/toTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/up"
        android:background="#00000000"
        android:layout_above="@+id/putong"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:text="进入普通导航"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/address_et"
        android:layout_toEndOf="@+id/address_et" />
    <ImageButton
        android:id="@+id/putong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right"
        android:background="#00000000"
        android:layout_above="@+id/kaifazhe"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:text="开发者信息"
        android:id="@+id/textView3"
        android:layout_above="@+id/getDate"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:id="@+id/kaifazhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/down"
        android:text="开发者信息"
        android:background="#00000000"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/toTest"
        android:layout_alignStart="@+id/toTest" />
</RelativeLayout>
